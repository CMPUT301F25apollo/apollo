<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organizer_mobile_navigation"
    app:startDestination="@id/navigation_organizer_events">

    <fragment
        android:id="@+id/navigation_organizer_events"
        android:name="com.example.apollo.ui.organizer.events.EventsFragment"
        android:label="Events"
        tools:layout="@layout/fragment_organizer_events">

        <action
            android:id="@+id/action_navigation_organizer_events_to_navigation_organizer_add_event"
            app:destination="@id/navigation_organizer_add_event" />

        <action
            android:id="@+id/action_navigation_organizer_events_to_organizer_event_details"
            app:destination="@id/navigation_organizer_event_details" />

    </fragment>

    <fragment
        android:id="@+id/navigation_organizer_add_event"
        android:name="com.example.apollo.ui.organizer.events.AddEventFragment"
        android:label="fill event Details"
        tools:layout="@layout/fragment_add_event">

        <action
            android:id="@+id/action_navigation_organizer_add_event_to_navigation_organizer_events"
            app:destination="@id/navigation_organizer_events" />
    </fragment>

    <fragment
        android:id="@+id/navigation_organizer_event_details"
        android:name="com.example.apollo.ui.organizer.events.OrganizerEventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_organizer_event_details">

        <action
            android:id="@+id/action_navigation_organizer_event_details_to_navigation_organizer_events"
            app:destination="@id/navigation_organizer_events" />

        <action
            android:id="@+id/action_navigation_organizer_event_details_to_navigation_event_waitlist"
            app:destination="@id/navigation_event_waitlist" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.apollo.ui.organizer.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile_organizer" >
        <action
            android:id="@+id/action_navigation_profile_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.apollo.ui.organizer.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile_organizer" >
        <action
            android:id="@+id/action_editProfileFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_event_waitlist"
        android:name="com.example.apollo.ui.organizer.events.EventWaitlistFragment"
        android:label="Event Waitlist"
        tools:layout="@layout/fragment_event_waitlist" />

</navigation>
