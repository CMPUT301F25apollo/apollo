<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_events">

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.example.apollo.ui.organizer.events.EventsFragment"
        android:label="Events"
        tools:layout="@layout/organiser_fragment_events">

        <action
            android:id="@+id/action_navigation_events_to_navigation_add_event"
            app:destination="@id/navigation_add_event" />
    </fragment>


    <fragment
        android:id="@+id/navigation_add_event"
        android:name="com.example.apollo.ui.organizer.events.AddEventFragment"
        android:label="Add New Event"
        tools:layout="@layout/fragment_add_event">

        <action
            android:id="@+id/action_navigation_add_event_to_navigation_events"
            app:destination="@id/navigation_events" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.apollo.ui.organizer.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile_organizer" >
        <action
            android:id="@+id/action_navigation_profile_to_navigation_event_waitlist"
            app:destination="@id/navigation_event_waitlist" />
    </fragment>

    <fragment
        android:id="@+id/navigation_event_waitlist"
        android:name="com.example.apollo.ui.organizer.events.EventWaitlistFragment"
        android:label="Event Waitlist"
        tools:layout="@layout/fragment_event_waitlist" >
        <action
            android:id="@+id/action_navigation_event_waitlist_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile_user"
        android:name="com.example.apollo.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <!-- profile to settings action-->
        <action
            android:id="@+id/action_navigation_profile_to_settings"
            app:destination="@id/navigation_settings" />
    </fragment>


    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.apollo.ui.profile.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>