<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <!-- ðŸ  Home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.apollo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <!-- âœ… Action: Home â†’ Filter -->
        <action
            android:id="@+id/action_navigation_home_to_navigation_filter"
            app:destination="@id/navigation_filter" />

        <!-- âœ… Action: Home â†’ Event Details -->
        <action
            android:id="@+id/action_navigation_home_to_navigation_event_details"
            app:destination="@id/navigation_event_details" />
    </fragment>

    <!-- ðŸ” Filter -->
    <fragment
        android:id="@+id/navigation_filter"
        android:name="com.example.apollo.ui.home.FilterFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter" />

    <!-- ðŸ“„ Event Details -->
    <fragment
        android:id="@+id/navigation_event_details"
        android:name="com.example.apollo.ui.home.EventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details">

        <!-- âœ… Back navigation -->
        <action
            android:id="@+id/action_navigation_event_details_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <!-- ðŸ”” Notifications -->
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.apollo.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- ðŸ‘¤ Profile -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.apollo.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">

        <!-- âœ… Profile â†’ Settings -->
        <action
            android:id="@+id/action_navigation_profile_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <!-- âš™ï¸ Settings -->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.apollo.ui.profile.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>