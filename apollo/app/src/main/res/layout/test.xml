<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rbAccepted"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Accepted"/>
        <RadioButton android:id="@+id/rbRejected"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rejected"/>
        <RadioButton android:id="@+id/rbWaitlisted" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Waitlisted"/>
        <RadioButton android:id="@+id/rbPending"   android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pending"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <Button android:id="@+id/btnClear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clear"/>
        <Button android:id="@+id/btnApply" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Apply" android:layout_marginStart="12dp"/>
    </LinearLayout>
</LinearLayout>
