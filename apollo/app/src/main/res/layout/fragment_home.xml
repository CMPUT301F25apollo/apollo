<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Header row with title and filter + info icons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apollo"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Filter Button (top-right corner) -->
        <ImageButton
            android:id="@+id/buttonFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="Filter"
            android:src="@drawable/ic_filter_list" />

        <!-- Info (light bulb) Button to show lottery popup -->
        <!-- leaves space between info button and filter icon -->
        <ImageButton
            android:id="@+id/buttonInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_lottery_info"
            android:src="@drawable/ic_lightbulb_24" />
    </RelativeLayout>

    <!-- Events section title -->
    <TextView
        android:text="EVENTS"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Scrollable list of event cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:translationY="10dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:id="@+id/eventsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>